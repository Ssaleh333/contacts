<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/im_item"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/person"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"

        />
    <TextView
        android:id="@+id/name_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/im_item"
        app:layout_constraintStart_toEndOf="@id/im_item"
        android:layout_marginStart="20dp"
        android:text="sara solmman"
        android:textSize="17dp"
        android:textStyle="bold"
/>
    <TextView
        android:id="@+id/phone_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name_item"
        app:layout_constraintStart_toEndOf="@id/im_item"
        app:layout_constraintBottom_toBottomOf="@id/im_item"
        android:layout_marginStart="20dp"
        android:text="01025785248"
        android:textSize="17dp"
        android:textColor="@color/white"
        />
</androidx.constraintlayout.widget.ConstraintLayout>